static int Findithbit (int n,int i){
        int ith = n & (1 << (i-1));
        return ith;
    }
 static int setithBit(int n, int i){
         n= n | (1 << (i-1));   
    return n;
 }
 static int resetithBit(int n, int i){
         n = n & (~(1 << (i-1)));   
    return n;
    }
 public static void ain(String[] args){
     System.out.println(ithbit (5,3));
     System.out.println(setithBit(4, 3));
     System.out.println(resetithBit(12,1)); 
 }
